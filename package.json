{
  "name": "Uzurion-Launcher",
  "version": "2.0.0",
  "productName": "Uzurion Launcher",
  "description": "Uzurion Launcher",
  "main": "app/index.html",
  "author": "Luuxis",
  "window": {
    "title": "Uzurion update",
    "width": 400,
    "height": 500,
    "frame": false,
    "resizable": false,
    "position": "center",
    "icon": "app/assets/images/icon/icon.png"
  },
  "chromium-args": "--enable-logging --v=1 --disable-gpu",
  "url": "http://146.59.227.140",
  "user": "",
  "webkit": {
    "plugin": true
  },
  "scripts": {
    "start": "run --64 --mirror https://npm.taobao.org/mirrors/nwjs/ .",
    "server": "npm install && node node_modules/emc-core-luuxis/utils/builder.js --v=1.0",
    "build:win": "npm install && build --win --x64 --mirror https://npm.taobao.org/mirrors/nwjs/ .",
    "build:mac": "npm install && build --mac --x64 --mirror https://npm.taobao.org/mirrors/nwjs/ .",
    "build:linux": "npm install && build --linux --x64 --mirror https://npm.taobao.org/mirrors/nwjs/ .",
    "build:all": "npm run build:linux && npm run build:mac && npm run build:win"
  },
  "license": "MIT",
  "build": {
    "appId": "Uzurion Launcher",
    "nwVersion": "0.56.0",
    "packed": true,
    "targets": [
      "zip",
      "nsis7z"
    ],
    "strippedProperties": [
      "build"
    ],
    "excludes": [
      ".gitignore",
      "node-js.bat",
      "web/**",
      "AppData/**",
      "node-v*/**",
      "test/**",
      "start.bat",
      "package-lock.json",
      "README.md"
    ],
    "outputPattern": "${NAME}-${VERSION}-${PLATFORM}",
    "win": {
      "productName": "Uzurion Launcher",
      "companyName": "Uzurion Launcher",
      "copyright": "copyright",
      "icon": "./app/assets/images/icon/icon.ico"
    },
    "mac": {
      "displayName": "Uzurion-Launcher",
      "copyright": "copyright",
      "plistStrings": {
        "CFBundleIdentifier": "Uzurion-Launcher"
      }
    },
    "nsis": {
      "installDirectory": "$LOCALAPPDATA\\Programs\\${_COMPANYNAME}",
      "diffUpdaters": true
    }
  },
  "devDependencies": {
    "nwjs-builder-luuxis": "^1.15.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luuxis/Arche-Launcher.git"
  },
  "dependencies": {
    "decompress": "^4.2.1",
    "emc-core-luuxis": "^1.0.9",
    "gamedig": "^3.0.7",
    "msmc": "^2.2.1",
    "node-fetch": "^2.6.1",
    "nodejs-file-downloader": "^4.7.3",
    "nw-autoupdater-luuxis": "^1.1.6"
  }
}
